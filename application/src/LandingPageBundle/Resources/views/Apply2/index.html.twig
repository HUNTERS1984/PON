        <div class="container">

            <div class="bg_apply">
                <div class="content_apply">
                    <h1>お申し込み</h1>
                    <div class="content_sub_apply">
                        <ul class="nav_apply">
                            <li><a href="{{ path("lp_apply") }}"><span>１.お客様情報の入力</span></a></li>
                            <li class="active"><a href="{{ path("lp_apply_2") }}"><span>2.入力情報の確認</span></a></li>
                            <li><a href="{{ path("lp_apply_3") }}"><span>3.仮申し込み完了</span></a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- //bg_apply -->

            <form class="form-horizontal">
                <div class="form_apply_2">
                    <div class="content_apply_2">

                        <div class="form-group">
                            <label class="col-sm-5">
                                申し込みプラン <span class="red-text">必須</span>
                            </label>
                            <div class="col-sm-7">
                                <ul class="nav_ra">
                                    <li>
                                        <p><label for="ra_a">プランA</label></p>
                                        <p><div class="money">¥10.000</div></p>
                                    </li>
                                </ul>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-5">
                                店舗名 <span class="red-text">必須</span>
                            </label>
                            <div class="col-sm-7">
                                <span class="text_left">店舗名</span> <br><br>
                                <span class="text_left">フリガナ</span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-5">
                                店舗の業種 <span class="red-text">必須</span>
                            </label>
                            <div class="col-sm-7">
                                <span class="text_left">飲食</span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-5">
                                氏名 <span class="red-text">必須</span>
                            </label>
                            <div class="col-sm-7">
                                <div class="row-contact">
                                    <div class="col-md-6">
