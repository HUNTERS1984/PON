{% extends "AdminBundle:Layouts:layout_login.html.twig" %}

{% block page_content %}
    <div class="hold-transition login-page">
        <div class="login-box">
            <div class="login-logo">
                <a href="{{ path('customer_homepage') }}"><img src="{{ asset('backend/images/logo.png') }}" alt=""></a>
            </div>
            <!-- //login-logo -->

            <div class="login-box-body">

                <p class="login-box-msg">さあ、はじめましょう。</p>

                <form method="POST" action="">
                    <div class="form-group has-feedback">
                        <label for="email">Eメールアドレス</label>
                        <input class="form-control" placeholder="Email" name="email" type="text">
                        <span class="fa fa-envelope form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback">
                        <input class="btn btn-primary btn-block btn-flat" type="submit" value="送信">
                    </div>
                </form>
                <!-- //form -->

                <div class="link-bottom">
                    <p>
                        <a href="{{ path('admin_login') }}" class="text-center-bottom">Return to login</a>
                    </p>
                </div>
                <!-- //link-bottom -->

            </div>
            <!-- //login-box-body -->
        </div>
        <!-- //login-box -->
    </div>
{% endblock %}

