{% extends "AdminBundle:Layouts:layout_login.html.twig" %}

{% block page_content %}
    <div class="hold-transition login-page">
        <div class="login-box">
            <div class="login-logo">
                <a href="{{ path('customer_homepage') }}"><img onerror="this.src='{{ asset('backend/images/no_img.jpg') }}'"  src="{{ asset('backend/images/logo.png') }}" alt=""></a>
            </div>
            <!-- //login-logo -->

            <div class="login-box-body">

                <p class="login-box-msg">{{ "security.reset.title"|trans }}</p>

                {{ form_start(form) }}

                <div class="form-group has-feedback">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email) }}
                    <span class="fa fa-envelope form-control-feedback"></span>
                </div>
                <div>
                    {{ form_errors(form) }}
                    {% for message in app.session.flashBag.get('forgot_password_error') %}
                        <li class="parsley-required">
                            {{ message }}
                        </li>
                    {% endfor %}
                </div>
                <div class="form-group has-feedback">
                    <input class="btn btn-primary btn-block btn-flat" type="submit" value="{{ "common.send"|trans }}">
                </div>
                {{ form_end(form) }}
                <div class="link-bottom">
                    <p>
                        <a href="{{ path('admin_login') }}" class="text-center-bottom">{{ "security.reset.return_login"|trans }}</a>
                    </p>
                </div>
                <!-- //link-bottom -->

            </div>
            <!-- //login-box-body -->
        </div>
        <!-- //login-box -->
    </div>
{% endblock %}

