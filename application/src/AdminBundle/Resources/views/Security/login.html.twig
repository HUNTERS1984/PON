{% extends "AdminBundle:Layouts:layout_login.html.twig" %}

{% block page_content %}
    <div class="hold-transition login-page">
        <div class="login-box">
            <div class="login-logo">
                <a href="{{ path('customer_homepage') }}"><img src="{{ asset('backend/images/logo.png') }}" alt=""></a>
            </div>
            <!-- //login-logo -->

            <div class="login-box-body">

                <p class="login-box-msg">さあ、はじめましょう。</p>

                <form method="POST" action="{{ path('admin_login') }}">
                    <div class="form-group has-feedback">
                        <label for="_username">ユーザー名</label>
                        <input class="form-control" name="_username" placeholder="Username" type="text">
                        <span class="fa fa-envelope form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback">
                        <label for="_password">パスワード</label>
                        <input class="form-control" placeholder="Password" name="_password" type="password" value="">
                        <span class="fa fa-lock form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback">
                        <div class="checkbox">
                            <input id="checkbox-re" class="checkbox-remember"  name="_remember_me" type="checkbox">
                            <label for="_remember_me" class="checkbox-remember-label"></label>
                            <span>Remember me</span>
                        </div>
                    </div>
                    <div class="form-group has-feedback">
                        <input class="btn btn-primary btn-block btn-flat" type="submit" value="次へ">
                    </div>
                </form>
                <!-- //form -->

                <div class="link-bottom">
                    <p>
                        <span>もう登録されていますか?</span>
                        <a href="{{ path("admin_forgot") }}" class="text-center-bottom">ログイン</a>
                    </p>
                </div>
                <!-- //link-bottom -->
            </div>
            <!-- //login-box-body -->
        </div>
        <!-- //login-box -->
    </div>
{% endblock %}

