{% extends "AdminBundle:Layouts:layout.html.twig" %}
{% block title %}User Management{% endblock %}
{% set active_menu = 'app_user' %}

{% set count = pagination.item_total %}

{% block breadcurm %}
    <div class="row">
        <div class="col-md-3 col-xs-12">
            <ul class="breadcrumbs_left">
                <li><span class="text_bre">クーポン一覧</span></li>
                <li><span class="no_bre">{{ count }}</span></li>
            </ul>
        </div>
    </div>
{% endblock %}

{% block page_content %}
    <!-- wrapp_search_btn -->
    <div class="wrapp_search_btn">
        <div class="row">
            <form  method="GET" action="{{ path('admin_app_user') }}"  class="form-group" role="form">
                <div class=" col-md-5 form-group ">
                    <input type="text" value="{{ params.query }}" name="query" id="search" class="form-control has-feedback-left" id="" placeholder="サーチ">
                </div>
                <div class="col-md-1">
                    <button type="submit" class="btn btn-white"><i class="fa fa-search"></i></button>
                </div>
                <!-- form-group -->
            </form>
        </div>
    </div>
    <!-- //wrapp_search_btn -->

    <!-- wrapp_table -->
    <div class="wrapp_table">

        <!-- poup user -->
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog photo_user" role="document">
                <div class="modal-content mana_user">
                    <div class="modal-body">
                        <img src="{{ asset('backend/images/photo_user.jpg') }}" class="img-responsive" alt="">
                        <div class="meta-footer">
                            <span>#hashtag #hashtag #hashtag</span>
                        </div>
                    </div>
                </div>
                <div class="wrapp_btn_close_poup_photo">
                    <button type="button" class="btn_mana_user" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
                </div>
            </div>
        </div>
        <!-- //poup user -->



        <!-- table -->
        <div class="table-responsive">
            <table class="table management_01">
                <thead>
                <tr>
                    <th>アバター</th>
                    <th>ユーザー名</th>
                    <th>Eメール</th>
                    <th>住所</th>
                    <th>会社</th>
                    <th>電話</th>
                    <th>作成日</th>
                    <th>有効</th>
                </tr>
                </thead>
                <tbody>
                {% if pagination.page_total == 0 %}
                <tr class="active">
                    <td align="center" colspan="9">No Records.</td>
                </tr>
                {% else %}
                    {% for item in users %}
                    <tr {% if loop.index is divisible by(2) %}class="active"{% endif %}>

                        <td>
                            <a href="" data-toggle="modal" data-target="#myModal2">
                                <img src="{{ asset(user_avatar_path ~ item.avatarUrl) }}" alt="" height="42" width="42">
                            </a>
                        </td>
                        <td>
                            <a href="#">
                                {{ item.username }}
                            </a>
                        </td>
                        <td>
                            <a href="#">
                                {{ item.email }}
                            </a>
                        </td>
                        <td>
                            <a href="#">
                                {{ item.address }}
                            </a>
                        </td>
                        <td>
                            <a href="#">
                                {{ item.company }}
                            </a>
                        </td>
                        <td>
                            <a href="#">
                                {{ item.tel }}
                            </a>
                        </td>
                        <td>
                            <a href="#">
                                {{ item.createdAt|date("Y.m.d") }}
                            </a>
                        </td>


                        <td><a href="" title="" class="red">{% if item.enabled == 0 %} 偽 {% else %} 真実{% endif %}</a></td>
                    </tr>
                    {% endfor %}

                {% endif %}

                </tbody>
            </table>
            {% include 'AdminBundle:Pager:pagination.html.twig' with {pagination: pagination, route: path(app.request.attributes.get('_route')) } %}
        </div>

        <!-- //table -->
    </div>
    <!-- //wrapp_table -->
{% endblock %}

