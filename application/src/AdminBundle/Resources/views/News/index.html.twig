{% extends "AdminBundle:Layouts:layout.html.twig" %}
{% block title %}News{% endblock %}
{% set active_menu = 'news' %}

{% set count = pagination.item_total %}

{% block breadcurm %}
    <div class="row">
        <div class="col-md-12 col-xs-12">
            <ul class="breadcrumbs_left">
                <li><span class="text_bre">お知らせ・新着</span></li>
                <li><span class="no_bre">{{ count }}</span></li>
            </ul>
        </div>
    </div>
{% endblock %}

{% block page_content %}
    <div class="wrapp_search_btn">
        <div class="row">
            <div class="col-md-6 col-xs-6">
                <form method="GET" action="{{ path('admin_news') }}">
                    <div class="row">
                        <div class="col-md-10">
                            <form class="form-group">
                                <input type="text" class="form-control has-feedback-left" value="{{ params.query }}" name="query" placeholder="ユーザー名/ハッシュタグを入力してください">
                            </form>
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-primary btn-sm">
                                <i class="fa fa-search"></i>
                                検索
                            </button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-md-4">
                <ul class="btn_search_right">
                    <li><a data-toggle="modal" data-target=".bs-example-modal-lg" class="click_to_load_modal_popup" href="{{ path('admin_news_create') }}"><span class="fa fa-plus" aria-hidden="true"></span> 新しいニュースを追加</a></li>
                </ul>
            </div>
            <div class="col-md-2 col-xs-6">
                {% include 'AdminBundle:Pager:pagination_news.html.twig' with {pagination: pagination, route: path(app.request.attributes.get('_route')) } %}
            </div>

        </div>
    </div>
    <!-- //wrapp_search_btn -->

    <!-- wrapp_news -->
    <div class="wrapp_news">
        <div class="row">
        {% if pagination.page_total == 0 %}
            <div class="col-md-12">
                No Records.
            </div>
        {% else %}
            {% for item in news %}
                <div class="col-md-12">
                    <div class="content_news">
                        <div class="top_news">
                            <h2>{{ item.title }}</h2>
                            <span class="date_news">
                                {{ item.createdAt|date("Y.m.d") }}
                                <a href="{{ path('admin_news_edit',{id:item.id}) }}" data-toggle="modal" data-target=".bs-example-modal-lg" class="edit-icon click_to_load_modal_popup"><i class="fa fa-pencil"></i></a>
                            </span>

                        </div>
                        <div class="bottom_news">
                            <p>
                                {{ item.introduction }}
                            </p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% endif %}
        </div>
    </div>
    <!-- /wrapp_news -->
{% endblock %}