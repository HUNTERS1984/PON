{% extends "AdminBundle:Layouts:layout.html.twig" %}
{% block title %}News{% endblock %}
{% set active_menu = 'news' %}

{% set count = pagination.item_total %}

{% block breadcurm %}
    <div class="row">
        <div class="col-md-12 col-xs-12">
            <ul class="breadcrumbs_left">
                <li><span class="text_bre">お知らせ・新着</span></li>
                <li><span class="no_bre">{{ count }}</span></li>
            </ul>
        </div>
    </div>
{% endblock %}

{% block page_content %}
    <!-- wrapp_search_btn -->
    <div class="wrapp_search_btn">
        <form method="GET" action="{{ path('admin_news') }}">
            <div class="row">
                <div class="col-md-6">
                    <form class="form-group">
                        <input type="text" class="form-control has-feedback-left" value="{{ params.query }}" name="query" placeholder="ユーザー名/ハッシュタグを入力してください">
                        <span class="fa fa-search form-control-feedback left" aria-hidden="true"></span>
                    </form>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary btn-sm">
                        <i class="fa fa-search"></i>
                        検索
                    </button>
                </div>
            </div>
        </form>
    </div>
    <!-- //wrapp_search_btn -->

    <!-- wrapp_news -->
    <div class="wrapp_news">
        {% if pagination.page_total == 0 %}
            <div class="media">
                No Records.
            </div>
        {% else %}
            {% for new in news %}
                <div class="media">
                    <div class="media-left">
                        <center><img width="171px" height="172px" class="media-object" src="{{ asset(news_avatar_path~new.imageUrl) }}" alt=""></center>
                    </div>
                    <div class="media-body">
                        <div class="top-media">
                            <h4 class="media-heading">{{ new.title }}</h4>
                        </div>
                        <div class="top-media">
                            <span class="left">期限: {{ new.createdAt|date("Y.m.d") }}</span>
                        </div>
                        <div class="top-media">
                            <span class="left"> カテゴリー: {{ new.newsCategory.name }}</span>
                            <span class="right">格納:{{ new.store.title }}</span>

                        </div>
                        <div class="top-media">
                            <span class="left">導入: {{ new.introduction }}</span>
                        </div>
                        <div class="top-media">
                            <span class="left">{{ new.description }}</span>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% endif %}
    </div>
    {% include 'AdminBundle:Pager:pagination.html.twig' with {pagination: pagination, route: path(app.request.attributes.get('_route')) } %}
    <!-- /wrapp_news -->
{% endblock %}