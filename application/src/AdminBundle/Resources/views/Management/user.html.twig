<div class="modal-dialog" role="document">
    <div class="modal-content modal_pon">
        <div class="modal-header">
            <div class="row">
                <div class="col-xs-9">
                    <ul class="nav nav-tabs" role="tablist">
                        <li role="presentation" class="active"><a href="#tab1" aria-controls="tab1" role="tab" data-toggle="tab">{{ "approve_management.user.basic_information"|trans }}</a></li>
                        <li role="presentation"><a href="#tab2" aria-controls="tab2" role="tab" data-toggle="tab">{{ "approve_management.user.usage_information"|trans }}</a></li>
                    </ul>
                </div>
                <div class="col-xs-3">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
            </div>
        </div>
        <!-- Tab panes -->
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="tab1">
                <div class="col-xs-3">
                    <img src="{{ asset(user_avatar_path ~ user.avatarUrl) }}" class="img-responsive" alt="">
                </div>
                <div class="col-xs-3 us_poup_left">
                    <p>{{ "approve_management.user.user_id"|trans }}</p>
                    <p>{{ "approve_management.user.user_name"|trans }}</p>
                    <p>{{ "approve_management.user.gender"|trans }}</p>
                </div>
                <div class="col-xs-6 us_poup_right">
                    <p>{{ user.appUserId }}</p>
                    <p>{{ user.userName }}</p>
                    <p>
                        {% if user.gender is not empty %}
                            {{ genders[user.gender] }}
                        {% endif %}
                    </p>
                </div>
            </div>
