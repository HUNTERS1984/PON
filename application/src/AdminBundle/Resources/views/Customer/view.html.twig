<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <div class="col-xs-9">
                <div class="btn-group btn-group-justified">
                    <a href="#" class="btn btn-default btn_tab_breadcrumbs active" role="button">{{ "customer.view.basic_information"|trans }}</a>
                </div>
            </div>
            <div class="col-xs-3">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
        </div>
        <div class="modal-body us_poup">
            <div class="col-xs-3">
                <img onerror="this.src='{{ asset('backend/images/no_img.jpg') }}'"  src="{{ asset(user_avatar_path ~ customer.avatarUrl) }}" class="img-responsive" alt="">
            </div>
            <div class="col-xs-3 us_poup_left">
                <p>{{ "customer.view.user_id"|trans }}</p>
                <p>{{ "customer.view.user_name"|trans }}</p>
                <p>{{ "customer.view.gender"|trans }}</p>
                <p>{{ "customer.view.email"|trans }}</p>
                <p>{{ "customer.view.status_title"|trans }}</p>
                <p>{{ "customer.view.last_login"|trans }}</p>
            </div>
            <div class="col-xs-6 us_poup_right">
                <p>{{ customer.appUserId }}</p>
                <p>{{ customer.userName }}</p>

                <p>
                    {% if customer.gender is not empty %}
                        {{ genders[customer.gender] }}
                    {% else %}
                        {{ "common.n_a"|trans }}
                    {% endif %}
                </p>
                <p>{{ customer.email }}</p>
                <p>{% if customer.isEnabled %}{{ "customer.view.status.active"|trans }}{% else %}{{ "customer.view.status.inactive"|trans }}{% endif %}</p>
                <p>{{ customer.lastLogin|date("Y.m.d") }}</p>
            </div>
        </div>
    </div>
</div>