
{% form_theme form with ['AdminBundle:Form:fields.html.twig', _self] %}
<div id="frm">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content modal_coupon">
            {{ form_start(form, {'attr': {'class': 'submitModal','data-ajax-redirect': path('admin_category'),'data-ajax-url': path("admin_category_edit",{id: category.id}), 'enctype': 'multipart/form-data'  }}) }}
            {{ form_errors(form) }}
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">{{ "category.edit.title"|trans }}</h4>
            </div>
            <div class="modal-body">
                <div class="">
                    <div class="col-md-12">
                        <div class="row wrapp_avar_btn">
                            <div class="col-md-3"><img width="200px" height="200px" src="{{ asset(category_avatar_path~ category.iconUrl) }}" alt=""></div>
                            <div class="col-md-4">
                                <div class="btn_upload_image">
                                    <span>{{ form_label(form.imageFile) }}</span>
                                    {{ form_widget(form.imageFile) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-setting">
                            {{ form_row(form.name) }}
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-setting">
                            <span id="error_message" class="error text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default btn-delete" data-dismiss="modal">{{ "common.delete"|trans }}</button>
                <button type="submit" class="btn btn-primary btn-change">{{ "common.save"|trans }}</button>
            </div>
            {{ form_end(form) }}

        </div>
    </div>

</div>

{% block scripts_footer %}
    <script src="{{ asset('backend/js/admin.js') }}"></script>
{% endblock %}
