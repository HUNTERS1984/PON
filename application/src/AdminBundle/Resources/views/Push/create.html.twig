{% form_theme form with ['AdminBundle:Form:fields.html.twig', _self] %}

<!-- Modal -->
<div class="modal fade" id="pushModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal_push" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <img src="{{ asset('backend/images/check_push.png') }}" alt="">
                <p>{{ "push.create.message_success"|trans }}</p>
            </div>
        </div>
    </div>
</div>


<div class="col-md-12">
    <a class="arrow_down collapsed" role="button" data-toggle="collapse" href="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
        <span>{{ "push.create.title"|trans }}</span>
    </a>
    <div class="collapse" id="collapseExample">
        <div class="down_con">

            {{ form_start(form, {'attr': {'class': 'submitModal','data-modal':'#pushModal','data-ajax-redirect': path('admin_push'),'data-ajax-url': path("admin_push_update"), 'enctype': 'multipart/form-data'  }}) }}
            {{ form_errors(form) }}
            <div class="col-md-12">
                {{ form_row(form.title) }}
                {{ form_row(form.message) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.segment) }}
            </div>
            <div class="col-md-6 delivery_time_ability">
                <div class="row">
                    <div class="col-md-12">
                        {{ form_row(form.type) }}
                    </div>
                    {{ form_row(form.deliveryTime) }}
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-setting">
                    <span id="error_message" class="error text-danger"></span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="button_send">
                    <button type="submit" class="btn btn-primary btn-send">
                        {{ "push.create.send"|trans }}
                    </button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
