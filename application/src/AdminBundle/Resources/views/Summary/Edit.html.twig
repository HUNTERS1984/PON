<script type="text/javascript">
    $(document).ready(function(){
        $("#frmSummary").submit(function(e){

            e.preventDefault();
            var formSerialize = $(this).serialize();
            $.post("{{ path("admin_summary_edit",{id: coupon.id}) }}", formSerialize, function(response){
                //your callback here
                alert(response);

            },'JSON');
        });

    });

</script>
