<!DOCTYPE html>
<html {% block html_attributes %}class="no-js"{% endblock %}>
<head>
    {% block meta_tags %}
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    {% endblock %}

    <title>{% block title %}PON{% endblock %}</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('backend/css/admin.css') }}"/>
    {% endblock %}

    <!-- Favicons -->
    {% block favicons %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}">
    {% endblock %}

    {% block scripts_header %}
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
        <![endif]-->

        {#<script src="{{ asset('backend/js/head.js') }}"></script>#}
    {% endblock %}
</head>

<body {% block body_attributes %}{% endblock %}>
{% block body %}
    <!-- header -->
    {% block breadcrumbs %}
        {% include "AdminBundle:Layouts/partials:_header.html.twig" %}
    {% endblock %}
    <!-- /header -->

    <!-- sidebar menu -->
    {% block side_bar_left %}
        {% include "AdminBundle:Layouts/partials:_side_bar_left.html.twig" %}
    {% endblock %}
    <!-- /sidebar menu -->

    <!-- page content -->
    <div class="wrapper">
        <!-- wrapper_breadcrumb -->
        <div class="wrapp_breadcrumbs">
        {% block breadcurm %}{% endblock %}
        </div>
        <!-- /wrapper_breadcrumb -->

        <!-- wrapper_content -->
        <div class="wrapper_content">
            {% block page_content %}{% endblock %}
        </div>
        <!-- /wrapper_content -->

    </div>
    <!-- /page content -->
    <script>
        var resizefunc = [];
    </script>

    {% block scripts_footer %}
        <script src="{{ asset('backend/js/admin.js') }}"></script>
    {% endblock %}

    {% block scripts_footer_inline %}{% endblock %}

{% endblock %}
</body>
</html>