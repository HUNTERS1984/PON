<!DOCTYPE html>
<html {% block html_attributes %}class="no-js"{% endblock %}>
<head>
    {% block meta_tags %}
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="robots" content="noindex, nofollow">
    {% endblock %}

    <title>{% block title %}PON dashboard{% endblock %}</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('backend/css/admin.css') }}"/>
    {% endblock %}

    <!-- Favicons -->
    {% block favicons %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}">
    {% endblock %}

    {% block scripts_header %}
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
        <![endif]-->

        <script src="{{ asset('backend/js/head.js') }}"></script>
    {% endblock %}
</head>

<body {% block body_attributes %}class="fixed-left"{% endblock %}>
{% block body %}
    <!-- Begin page -->
    <div id="wrapper">

        <!-- ========== Top Bar ========== -->
        {% block top_bar %}
            {% include "AdminBundle:Layouts/partials:_top_bar.html.twig" %}
        {% endblock %}

        <!-- ========== Sidebar left ========== -->
        {% block side_bar_left %}
            {% include "AdminBundle:Layouts/partials:_side_bar_left.html.twig" %}
        {% endblock %}

        <div class="content-page">
            <div class="content">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-12">
                            {% block wp_page_title %}
                                <h4 class="page-title">{% block page_title %}{% endblock %}</h4>
                            {% endblock %}

                            {% block breadcrumbs %}
                                {% include "AdminBundle:Layouts/partials:_breadcrumbs.html.twig" %}
                            {% endblock %}
                        </div>
                    </div>
                    {% block page_content %}{% endblock %}
                </div> <!-- container -->
            </div> <!-- content -->

            {% block footer %}
                {% include "AdminBundle:Layouts/partials:_footer.html.twig" %}
            {% endblock %}
        </div>
    </div>
    <!-- END wrapper -->

    <script>
        var resizefunc = [];
    </script>

    {% block scripts_footer %}
        <script src="{{ asset('backend/js/admin.js') }}"></script>
    {% endblock %}

    {% block scripts_footer_inline %}{% endblock %}

{% endblock %}
</body>
</html>